<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/background_home_course_recommend"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="5dp"
        android:padding="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:scaleType="fitXY"
            android:background="@drawable/background_home_course_recommend"
            android:id="@+id/iv_course_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_material_aytism" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_course_title"
        android:layout_width="230dp"
        android:layout_marginTop="2dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/app_font_medium"
        android:maxLines="2"
        android:text="Cách nhận biết trẻ bị tự kỷ "
        android:textColor="@color/gray_text"
        android:textSize="19dp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        android:rating="3.5"
        android:progressTint="@color/orange_option"
        android:numStars="5"
        android:padding="0dp"
        android:scaleX="0.35"
        android:scaleY="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.AppCompatRatingBar>

    <TextView
        android:id="@+id/tv_numRating"
        android:fontFamily="@font/app_font_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginBottom="12dp"
        android:text="(4.152)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/iv_course_recommend_main"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/baseline_chevron_right_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>